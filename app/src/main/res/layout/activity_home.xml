<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".activities.HomeActivity"
        >
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linear_bottom_bar">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/top_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:titleEnabled="false">

                <!-- HEADER -->


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="?attr/actionBarSize"
                        android:background="#fff"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_collapseMode="parallax"
                        >

                    <LinearLayout
                            android:id="@+id/ll_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/curved_background"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/margin_extra_large"
                            >
                        <LinearLayout
                                android:id="@+id/ll_profile_pic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_very_small"
                                android:baselineAligned="false"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="8">

                            <LinearLayout
                                    android:id="@+id/ll_user_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center_horizontal|bottom"
                                        android:padding="@dimen/margin_tiny"
                                        android:text="@string/user_location"
                                        android:textColor="@color/secondary_text_color"
                                        android:textSize="@dimen/text_size_small"
                                        />

                                <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/tv_user_location"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center_horizontal"
                                        android:padding="@dimen/margin_tiny"
                                        android:textColor="@color/secondary_text_color"
                                        android:textSize="@dimen/text_size_medium"
                                        />
                            </LinearLayout>


                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                <RelativeLayout
                                        android:id="@+id/rl_profile_pic"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/profile_image"
                                            android:layout_width="64dp"
                                            android:layout_height="64dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_user_icon"
                                            app:civ_border_color="#ffffff"
                                            app:civ_border_width="1dp"/>

                                    <android.support.v7.widget.AppCompatImageView
                                            android:id="@+id/iv_change_profile_pic"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentRight="true"
                                            android:background="@drawable/camera_background_circle"
                                            android:padding="@dimen/margin_tiny"
                                            android:visibility="invisible"
                                            app:srcCompat="@drawable/vc_camera"/>

                                </RelativeLayout>
                                <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center_horizontal"
                                        android:lines="2"
                                        android:maxLines="2"
                                        android:minLines="2"
                                        android:padding="@dimen/margin_tiny"
                                        android:text="-"
                                        android:textColor="@color/secondary_text_color"
                                        android:textSize="@dimen/text_size_small"
                                        />
                            </LinearLayout>


                            <LinearLayout
                                    android:id="@+id/ll_cashback"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center_horizontal"
                                        android:padding="@dimen/margin_tiny"
                                        android:text="@string/cashback_till_date"
                                        android:textColor="@color/secondary_text_color"
                                        android:textSize="@dimen/text_size_small"
                                        />

                                <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/tv_cashback"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:gravity="center_horizontal"
                                        android:padding="@dimen/margin_tiny"
                                        android:text="-"
                                        android:textColor="@color/secondary_text_color"
                                        android:textSize="@dimen/text_size_small"
                                        />
                            </LinearLayout>
                        </LinearLayout>


                        <RelativeLayout
                                android:id="@+id/rl_level_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_medium"
                                android:layout_marginRight="@dimen/margin_medium"

                                >


                            <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:gravity="center_horizontal"
                                    android:padding="@dimen/margin_tiny"
                                    android:text="Level"
                                    android:textColor="@color/secondary_text_color"
                                    android:textSize="@dimen/text_size_small"
                                    />


                            <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_level_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center_horizontal"
                                    android:padding="@dimen/margin_tiny"
                                    android:textColor="@color/secondary_text_color"
                                    android:textSize="@dimen/text_size_small"/>

                            <android.support.v7.widget.AppCompatSeekBar
                                    android:id="@+id/sk_level"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layout_below="@+id/tv_level_desc"
                                    android:max="10"
                                    android:maxHeight="10dp"
                                    android:min="0"
                                    android:minHeight="10dp"
                                    android:paddingEnd="0dp"
                                    android:paddingStart="0dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_drawable"
                                    android:thumb="@null"/>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/colorPrimaryDark"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="@style/ToolbarColoredBackArrow"
                        app:layout_collapseMode="pin"
                        >


                    <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/app_name"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@color/color_white"/>


                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

            <!-- IF YOU WANT TO KEEP "Choose Item" always on top of the RecyclerView, put this TextView here
             <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:text="choose item" />
            -->
        </android.support.design.widget.AppBarLayout>


        <include
                layout="@layout/layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.winjit.swiperewards.helpers.FixScrollingFooterBehavior"
                />
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
            android:id="@+id/linear_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                app:itemBackground="@drawable/navigation_background"
                app:itemIconTint="@color/color_white"
                app:itemTextColor="@color/color_white"

                app:menu="@menu/navigation"/>
    </LinearLayout>

</RelativeLayout>