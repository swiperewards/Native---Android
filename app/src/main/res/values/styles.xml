<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/unselected_item</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="style_horizon_text_view" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
        <item name="android:textColor">@color/color_titles</item>
    </style>

    <style name="style_text_view" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
        <item name="android:textColor">@color/color_titles</item>
    </style>

    <style name="style_font_icon" parent="style_text_view">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">@dimen/margin_tiny</item>

    </style>

    <style name="style_font_icon_large" parent="style_font_icon">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">@dimen/margin_tiny</item>
        <item name="android:textSize">@dimen/margin_extra_large</item>

    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button">
        <!--<item name="android:background">@drawable/rounded_button_background</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="style_text_input_layout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>


    <style name="AppEditTextInputErrorColorGray" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="style_edit_text" parent="AppTheme">
        <item name="android:textColor">@color/color_text</item>
        <item name="colorAccent">@color/color_normal_mode</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="colorControlNormal">@color/color_normal_mode</item>
        <item name="colorControlActivated">@color/color_normal_mode</item>
        <item name="colorControlHighlight">@color/color_normal_mode</item>
    </style>




</resources>
